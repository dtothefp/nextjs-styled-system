{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNEXT",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@affirm/*": ["packages/*/src"]
    }
  },
  "exclude": [
    "node_modules",
    "packages/*/cjs",
    "packages/*/es"
  ],
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.js"]
}
