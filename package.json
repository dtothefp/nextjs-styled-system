{
  "name": "@dfp/app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "prettier": "@dfp/eslint-config/.prettierrc.js",
  "scripts": {
    "build": "npm-run-all --serial clean --parallel build:svg build:packages --serial build:next build:export",
    "build:next": "next build",
    "build:export": "next export",
    "build:packages": "tsc --build ./packages/tsconfig.packages.json",
    "build:svg": "svgr --ignore-existing --filename-case pascal --typescript -d src/assets src/assets/svg",
    "clean": "run-p clean:build clean:packages",
    "clean:build": "rm -rf {.next,out}",
    "clean:packages": "rm -rf packages/*/{es,cjs,dist,*tsbuildinfo}",
    "deploy": "timestamp=$(date +\"%Y-%m-%d %H:%M:%S\"); touch out/.nojekyll; gh-pages-clean; NODE_DEBUG=gh-pages gh-pages -d out -m \"Update $timestamp\" --dotfiles",
    "dev": "next dev",
    "start": "next start",
    "lint": "eslint --ext .tsx --ext .js --ext .ts .",
    "serve": "serve out -l 3000",
    "test": "jest",
    "typecheck": "tsc --project tsconfig.base.json"
  },
  "dependencies": {
    "next": "10.1.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "styled-components": "^5.2.3",
    "styled-normalize": "^8.0.7"
  },
  "devDependencies": {
    "@svgr/cli": "^5.5.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.2",
    "@types/react": "^17.0.3",
    "@types/styled-components": "^5.1.9",
    "@types/styled-system": "^5.1.11",
    "add": "^2.0.6",
    "babel-plugin-styled-components": "^1.12.0",
    "gh-pages": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "serve": "^11.3.2",
    "typescript": "^4.2.3"
  }
}
